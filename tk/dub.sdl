name        "gui-tk"
description "A GUI for renpy-update-tl program."
authors     "Nickolay Bukreyev"
copyright   "Copyright Â© 2019, Nickolay Bukreyev"
license     "MIT"

toolchainRequirements frontend=">=2.078"

// dependency "dlangui" version="~>0.9.182"
dependency "tkd" version="~>1.1.13"

// subConfiguration "dlangui" "minimal"

debugVersions "showTclErrors"
stringImportPaths "views" "../views"
targetName "renpy-update-tl-gui"

copyFiles "$TCLTK_PACKAGE_DIR/dist/library/" platform="windows"
postBuildCommands `copy /y "$TCLTK_PACKAGE_DIR\dist\x86\*" . >nul` platform="windows-x86"
postBuildCommands `copy /y "$TCLTK_PACKAGE_DIR\dist\x86_64\*" . >nul` platform="windows-x86_64"
